# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=sensorthings_datalake

# External API Configuration
OGCAPI_BASE_URL=https://geodata.city.gov/ogcapi
FINTO_API_URL=https://api.finto.fi

# Sync Configuration
SYNC_INTERVAL_MINUTES=60
CACHE_TTL_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Application Settings
APP_ENV=development
APP_PORT=8080

# Feature Sync Service
FEATURE_SYNC_ENABLED=true
FEATURE_SYNC_BATCH_SIZE=100
FEATURE_SYNC_RETRY_ATTEMPTS=3

# UCUM Ontology Sync
UCUM_SYNC_ENABLED=true
UCUM_SYNC_SCHEDULE=0 0 1 * *

# Data Retention (in days)
OBSERVATION_RETENTION_DAYS=365
CACHE_RETENTION_DAYS=30

# Performance Settings
MAX_POOL_SIZE=10
MIN_POOL_SIZE=5
CONNECTION_TIMEOUT_SECONDS=10
MAX_IDLE_TIME_MINUTES=10

# Security (for production)
API_KEY=
JWT_SECRET=

# Monitoring (optional)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=
MONITORING_API_KEY=
