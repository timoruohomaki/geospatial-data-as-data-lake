# MongoDB Atlas Configuration
# Copy this file to .env and update with your actual values

# MongoDB Connection String
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Database Name
DATABASE_NAME=sensorthings_datalake

# External API Configuration
# OGC API Features base URL
OGCAPI_BASE_URL=https://geodata.city.gov/ogcapi

# Finto UCUM Ontology API
FINTO_API_URL=https://api.finto.fi

# Sync Configuration
# Sync interval in milliseconds (1 hour = 3600000)
SYNC_INTERVAL=3600000

# Cache TTL in seconds (30 days = 2592000)
CACHE_TTL=2592000

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Application Settings
NODE_ENV=development
PORT=3000

# Feature Sync Service
FEATURE_SYNC_ENABLED=true
FEATURE_SYNC_BATCH_SIZE=100
FEATURE_SYNC_RETRY_ATTEMPTS=3

# UCUM Ontology Sync
UCUM_SYNC_ENABLED=true
UCUM_SYNC_SCHEDULE=0 0 1 * * # Monthly at 1st day, midnight

# Data Retention (in days)
OBSERVATION_RETENTION_DAYS=365
CACHE_RETENTION_DAYS=30

# Performance Settings
MAX_POOL_SIZE=10
MIN_POOL_SIZE=5
CONNECTION_TIMEOUT_MS=10000

# Security (for production)
# API_KEY=your-api-key-here
# JWT_SECRET=your-jwt-secret-here

# Monitoring (optional)
# MONITORING_ENABLED=false
# MONITORING_ENDPOINT=https://monitoring.example.com
# MONITORING_API_KEY=monitoring-key
